<Window x:Class="WpfRibbonSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Ribbon>
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu >
                    <RibbonApplicationMenuItem Header="New"  ImageSource="Images\New.png"/>
                    <RibbonApplicationMenuItem Header="Open" ImageSource="Images\Open.png"/>
                    <RibbonApplicationMenuItem Header="Exit" ImageSource="Images\Exit.png"/>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
